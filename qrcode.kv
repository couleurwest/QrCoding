<FormLabel@Label>:
    font_size: '14sp'
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    halign: 'left'
<FormTInput@TextInput>:
    font_size: '14sp'
    size_hint: 1, None
    height: self.minimum_height
    multiline: False
    write_tab: False
    on_focus: self.background_color= (1,1,1,1)
<FormButton@Button>:
    canvas.before:
        Color:
            rgba: 2/255, 56/255, 87/255, 1
        Line:
            width: 0.2
            rectangle: self.x, self.y,self.width, self.height
    font_size: '16sp'
    size_hint: 0.7, None
    size: (1, 30 )
    bold: True
    background_color: (0.5, 0.7, 0.5, 0.1)
    border: 1,1,1,1
    color: (2/255, 56/255, 87/255, .5)

<GridForm@GridLayout>:
    rows:2
    padding: 10,5
    spacing: 10,0
    size_hint: (1, None)
    height: 70
    pos_hint : {'center_x':.5, 'center_y':.5}
<QRCoder>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"
        Color:
            rgba: 1,1,1,0.2
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        padding: 0,0,0,0
        spacing: 0
        GridForm:
            cols: 2
            rows: 1
            Label:
                font_size: '20sp'
                text: "COULEURWEST-IT.COM | QRCoder"
                size_hint: 0.9, 1
                height: 50
                pos_hint: 0, 0
            FormButton:
                text: "X"
                size_hint: 0.1, 1
                on_press: root.closeapp()
        GridForm:
            cols: 2
            FormLabel:
                text: 'Nom'
            FormLabel:
                text: 'Prénom'
            FormTInput:
                id: name
                hint_text: 'Nom'
                text: root.name
            FormTInput:
                id: surname
                hint_text: 'Prenom'
                text: root.surname
        GridForm:
            FormLabel:
                text: 'Entreprise'
            FormTInput:
                id: corp
                text: root.corp
                hint_text: 'Nom de votre entreprise (Optionnel)'
        GridForm:
            cols: 2
            FormLabel:
                text: 'Téléphone 1'
            FormLabel:
                text: 'Téléphone 1'
            FormTInput:
                id: phone_1
                text: root.phone_1
                hint_text: '+594 ...'
            FormTInput:
                id: phone_2
                text: root.phone_2
                hint_text: '+594 ...'
        GridForm:
            FormLabel:
                text: 'Adresse électronique'
            FormTInput:
                id: email
                hint_text: 'email'
        GridForm:
            FormLabel:
                text: 'Site internet'
            FormTInput:
                id: url
                hint_text: 'https://'
        GridForm:
            rows:1
            cols:2
            FormButton:
                text: 'VCard QRCode'
                on_press: root.generate_vcard()
            FormButton:
                text: 'URL QRCode'
                on_press: root.generate_url()
    FormTInput:
        id: tracker
        text: root.tracker
        disabled: True
        halign: 'center'
