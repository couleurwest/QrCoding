<FormLabel@Label>:
    font_size: '14sp'
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    halign: 'left'
<FormTInput@TextInput>:
    canvas.before:
        Color:
            rgba: ((2/255), (198/255), (201/255),1) if self.focus else ((2/255), (198/255), (201/255),0.5)
        Line:
            width: 0.25
            rectangle: self.x+ 2, self.y,self.width-2, self.height-2
        Color:
            rgba : ((2/255), (198/255), (201/255),0.1)if self.focus else (1,1,1,1)
        Rectangle:
            size: (self.width, self.height)
            pos: (self.x , self.y + 1)

        Color:
            rgb: 1,1,1
        Color:
            rgba: (0,0,0,1) if self.focus else ((2/255), (198/255), (201/255),0.7)
    background_color: (1,1,1,0.5) if self.focus else (1,1,1,0.5)
    font_size: '14sp'
    size_hint: 1, None
    height: self.minimum_height
    multiline: False
    write_tab: False

<InfoInput@TextInput>:
    background_normal: 'boutton_off.png'
    background_active: 'boutton_on.png'
    border: 0, 0, 0, 0
    background_color: 1,1,1,0.5
    font_size: '14sp'
    size_hint: 1, None
    height: self.minimum_height
    multiline: False
    write_tab: False

<FormButton@Button>:
    canvas.before:
        Color:
            rgba : (1,1,1,0.5)
        Rectangle:
            size: (self.width, self.height)
            pos: (self.x , self.y)
        Color:
            rgba: ( (2/255), (150/255), (170/255), 0.9)
    background_color:(0.1,0.2,0.3, 0.5)
    font_size: '16sp'
    size_hint: None,None
    size: (150, 30)
    border: 10,10,10,10


<GridForm@GridLayout>:
    rows:2
    padding: 10,5
    spacing: 10,0
    size_hint: (1, None)
    height: 70
    pos_hint : {'center_x':.5, 'center_y':.5}
<QRCoder>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"
        Color:
            rgba: 1,1,1,0.2
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        padding: 0,0,0,0
        spacing: 0
        GridForm:
            cols: 2
            rows: 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.9, 1
                padding: 0,10,0,0
                Image:
                    source: '.src/qrcode.png'
                    size: self.texture_size
                    size_hint: 0.1, 1
                    allow_stretch: True
                    pos_hint_x: {'left':0}
                Label:
                    font_size: '20sp'
                    color: 56/255, 138, 115
                    text: "COULEURWEST-IT.COM | QRCoder"
                    size_hint: 0.8, 1
                    height: 50
            FormButton:
                text: "X"
                size_hint: 0.1, 1
                on_press: root.closeapp()
        GridForm:
            cols: 2
            FormLabel:
                text: 'Nom'
            FormLabel:
                text: 'Prénom'
            FormTInput:
                id: name
                hint_text: 'Nom'
                text: root.name
            FormTInput:
                id: surname
                hint_text: 'Prenom'
                text: root.surname
        GridForm:
            FormLabel:
                text: 'Entreprise'
            FormTInput:
                id: corp
                text: root.corp
                hint_text: 'Nom de votre entreprise (Optionnel)'
        GridForm:
            cols: 2
            FormLabel:
                text: 'Téléphone 1'
            FormLabel:
                text: 'Téléphone 1'
            FormTInput:
                id: phone_1
                text: root.phone_1
                hint_text: '+594 ...'
            FormTInput:
                id: phone_2
                text: root.phone_2
                hint_text: '+594 ...'
        GridForm:
            FormLabel:
                text: 'Adresse électronique'
            FormTInput:
                id: email
                hint_text: 'email'
        GridForm:
            FormLabel:
                text: 'Site internet'
            FormTInput:
                id: url
                hint_text: 'https://'
        GridForm:
            rows:1
            cols:2
            center: 0.5, 0.5
            size_hint: None, None
            width: 300
            FormButton:
                text: 'VCard QRCode'
                on_press: root.generate_vcard()
            FormButton:
                text: 'URL QRCode'
                on_press: root.generate_url()
    InfoInput:
        id: tracker
        text: root.tracker
        disabled: True
        halign: 'center'
